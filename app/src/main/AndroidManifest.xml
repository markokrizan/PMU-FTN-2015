<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.freeman.projekat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/Theme.AppCompat.Light.NoActionBar">


        <activity android:name="com.example.freeman.projekat.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.freeman.projekat.activities.LoginActivity" />
        <activity android:name="com.example.freeman.projekat.activities.PostsActivity" />
        <activity
            android:name="com.example.freeman.projekat.activities.CreatePostsActivity"
            android:parentActivityName="com.example.freeman.projekat.MainActivity"

            />
        <activity android:name="com.example.freeman.projekat.activities.ReadPostsActivity" />
        <activity android:name="com.example.freeman.projekat.activities.SettingsActivity" />
        <activity android:name="com.example.freeman.projekat.dialogs.DatePickerDialog"></activity>
    </application>

</manifest>